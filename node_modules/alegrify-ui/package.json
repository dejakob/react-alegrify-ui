{
  "name": "alegrify-ui",
  "version": "1.0.0",
  "description": "Alegrify User Interface",
  "main": "index.html",
  "repository": "https://github.com/dejakob/alegrify-ui",
  "author": "dejakob",
  "license": "MPL",
  "devDependencies": {
    "less": "3.8.1",
    "less-plugin-auto-rtl": "^1.0.13",
    "less-plugin-autoprefix": "^2.0.0",
    "less-plugin-clean-css": "1.5.1",
    "npm-watch": "0.3.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "lib"
      ],
      "extensions": "less",
      "quiet": false
    }
  },
  "scripts": {
    "build": "npm run build:full && npm run build:min",
    "build:full": "lessc index.less alegrify-ui.css --auto-rtl --autoprefix",
    "build:min": "lessc alegrify-ui.css alegrify-ui.min.css --clean-css",
    "watch": "npm-watch"
  }
}
